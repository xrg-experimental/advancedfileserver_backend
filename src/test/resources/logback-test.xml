<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for general test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress console output from PathResolver during tests but allow programmatic access -->
    <logger name="com.sme.afs.util.PathResolver" level="ERROR" additivity="false">
        <!-- No console appender - logs are captured by test appenders only -->
    </logger>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>